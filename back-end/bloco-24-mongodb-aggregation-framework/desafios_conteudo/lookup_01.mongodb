use('agg_example');
db.clients.aggregate([
  {
    $lookup: {
      from: "transactions",
      let: {
        cliente: "$name"
      },
      pipeline: [
        {
          $match: {
            $expr: {
              $and: [{ $eq: ["$from", "$$cliente"] }]
            }
          }
        },
      { $project: { _id: 0 } }
      ],
      as: "transactions"
    }
  }
]);
