use('storage');
db.products.aggregate([
  {
    $project: {
      _id: 0,
      name: 1,
      lucroEstoque: {
        $multiply: [
          "$quantity",
          {
            $subtract: [
              "$sale_price",
              { $add: ["$purchase_price", "$taxes"] }
            ]
          }
        ]
      }
    }
  }
]);
